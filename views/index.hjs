<!DOCTYPE html>
<html lang="en">

<script type="text/javascript">setTimeout(function(){location.reload()}, 60*1000)</script>

<head>
  <meta charset="utf-8"/>
  <title>PRV</title>
  <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">
        Pull Request Viewer
      </a>
      <div class="pull-right profile">
        <img src="{{profile._json.avatar_url}}"/>
        {{profile.displayName}}
      </div>
    </div>
  </div>
</div>

<div class="container">

  <table class="table table-bordered">

    <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Submitter</th>
      <th>Reviewers</th>
      <th>Review Status</th>
      <th>Comments</th>
      <th>Last Update</th>
      <th>Branch</th>
      <th>Build Status</th>
    </tr>
    </thead>

    <tbody>
    {{#pulls}}
    <tr class="pullrequest {{class}}">
      <td><a href="{{html_url}}">#{{number}}</a></td>
      <td>{{displayTitle}}</td>
      <td>
        {{#submitter}}
        <img src="{{avatar}}" title="{{username}}" alt="{{username}}"/>
        {{/submitter}}
      </td>
      <td>
        {{#reviewers}}
          {{#avatar}}
            <img src="{{avatar}}" title="{{username}}" alt="{{username}}"/>
          {{/avatar}}
          {{^avatar}}
            <span style="text-transform: uppercase">{{username}}</span>
          {{/avatar}}
        {{/reviewers}}
      </td>
      <td><span class="label label-{{reviewStatusClass}}">{{reviewStatus}}</span></td>
      <td>{{num_comments}}</td>
      <td class="nowrap">
        {{#last_user}}
          <img src="{{avatar}}" title="{{username}}" alt="{{username}}"/>
        {{/last_user}}
        {{last_update_string}}
      </td>
      <td><code>{{head.ref}}</code></td>
      <td><span class="label label-{{buildStatusClass}}">{{buildStatus}}</span></td>
    </tr>
    {{/pulls}}
    </tbody>

  </table>

  <div class="muted">
    Showing open pull requests from:
    {{#settings.github.repos}}
      <a href="https://github.com/{{user}}/{{repo}}" class="muted">{{user}}/{{repo}}</a>
    {{/settings.github.repos}}
    <br/>
    Approximate GitHub API calls remaining: {{rateLimitRemaining}}
    <br/>
    Pull Requests older than one month are hidden.
  </div>

</div>

</body>
</html>
