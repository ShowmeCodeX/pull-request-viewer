<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>PRV - {{settings.github.user}}/{{settings.github.repo}}</title>
  <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">
        Pull Request Viewer -
        {{settings.github.user}}/{{settings.github.repo}}
      </a>
      <div class="pull-right profile">
        <img src="{{profile._json.avatar_url}}"/>
        {{profile.displayName}}
      </div>
    </div>
  </div>
</div>

<div class="container">

  <table class="table table-bordered">

    <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Submitter</th>
      <th>Reviewers</th>
      <th>Comments</th>
      <th>Status</th>
      <th>Last Update</th>
      <th>Branch</th>
    </tr>
    </thead>

    <tbody>
    {{#pulls}}
    <tr class="pullrequest {{class}}">
      <td><a href="{{html_url}}">#{{number}}</a></td>
      <td>{{title}}</td>
      <td>
        <img src="{{user.avatar_url}}"/>&nbsp;{{user.login}}
      </td>
      <td>
        {{reviewers}}
      </td>
      <td>{{num_comments}}</td>
      <td><span class="label label-{{statusClass}}">{{status}}</span></td>
      <td class="nowrap">
        {{last_update}}
        {{#last_commenter}} <br/> by {{last_commenter}} {{/last_commenter}}
      </td>
      <td><code>{{head.ref}}</code></td>
    </tr>
    {{/pulls}}
    </tbody>

  </table>

</div>

</body>
</html>
